doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="stylesheet" href="/css/style.css")
        script(src="/js/script.js" defer)
    body
        header#header
            .container
                block navigation
                    include nav.pug
        main.main
            .container
                block content
        block footer
            include footer.pug
                